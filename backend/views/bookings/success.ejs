<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-success">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-check-circle"></i> Booking Confirmed!
                    </h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h4 class="text-success mb-3">Your booking has been successfully confirmed!</h4>
                    
                    <!-- Booking Details -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Booking Details</h5>
                            <p><strong>Booking ID:</strong> <%= booking._id %></p>
                            <p><strong>Game:</strong> <%= booking.game.name %></p>
                            <p><strong>Date:</strong> <%= booking.date %></p>
                            <p><strong>Time:</strong> <%= booking.timeRange.from %> - <%= booking.timeRange.to %></p>
                        </div>
                        <div class="col-md-6">
                            <h5>Payment Details</h5>
                            <p><strong>Amount Paid:</strong> â‚¹<%= booking.totalPrice %></p>
                            <p><strong>Players:</strong> <%= booking.quantity %></p>
                            <p><strong>Status:</strong> 
                                <span class="badge bg-success">Paid</span>
                            </p>
                        </div>
                    </div>

                    <!-- Important Information -->
                    <div class="alert alert-info">
                        <h6><i class="bi bi-info-circle"></i> Important Information:</h6>
                        <ul class="mb-0 text-start">
                            <li>Please arrive 10 minutes before your scheduled time</li>
                            <li>Bring a valid ID proof for verification</li>
                            <li>Contact the game owner if you need to reschedule</li>
                            <li>Keep this booking confirmation for reference</li>
                        </ul>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="/bookings/my" class="btn btn-primary me-md-2">
                            <i class="bi bi-list"></i> View All Bookings
                        </a>
                        <a href="/games" class="btn btn-outline-primary me-md-2">
                            <i class="bi bi-controller"></i> Browse More Games
                        </a>
                        <a href="/dashboard" class="btn btn-outline-secondary">
                            <i class="bi bi-house"></i> Go to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 